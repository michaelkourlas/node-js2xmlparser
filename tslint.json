{
  "extends": "tslint:recommended",
  "rules": {
    "max-classes-per-file": [
      false
    ],
    "max-line-length": [
      true,
      80
    ],
    "object-literal-key-quotes": [
      false
    ],
    "one-line": [
      true,
      "check-catch",
      "check-finally",
      "check-else",
      "check-whitespace"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "never",
        "singleline": "never"
      }
    ],
    "variable-name": [
      true,
      "check-format",
      "allow-leading-underscore",
      "ban-keywords"
    ]
  }
}
